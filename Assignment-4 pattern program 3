for i in range(4) 
    if(i==0):
       for j in range(i+1) :
           print(i+1,end=" ") 
    print () 
    elif(i==1):
          for j in range(3, 1,-1):
               print(j, end=" ") 
          print () 
          i=i+1
   elif(i==2):
        for j in range(6, 3,-1):
            print(j, end=" ") 
        print () 
        i=i+1
   else:
        for j in range(10, 6,-1):
            print (j, end=" ") 
        print () 
        i=i+1
     
